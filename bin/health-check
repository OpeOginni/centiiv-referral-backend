const http = require('http');

const options = {
    host: 'localhost',
    port: 3000,
    path: '/api/v1/health-check',
};

const req = http.request(options, (res) => {
    if (res.statusCode === 200) {
        console.log('Node.js server is running');
        process.exit(0);
    } else {
        console.log('Node.js server is not running');
        process.exit(1);
    }
});

req.on('error', (err) => {
    console.error(err);
    process.exit(1);
});

req.end();
